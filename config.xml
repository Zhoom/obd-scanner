<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.pecapreco" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Peça Preço</name>
    <description>
        Aplicativo para capturar informações de uma entrada OBDII e enviar para uma WEB API.
    </description>
    <author email="marcosgeovane@unigranrio.br">
        Marcos G. Guimarães Filho
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <plugin name="cordova-plugin-advanced-http" spec="^2.0.1" />
    <plugin name="cordova-plugin-bluetooth-serial" spec="^0.4.7" />
    <icon density="mdpi" height="57" platform="android" src="res/icon/android/mipmap-xhdpi/ic_launcher.png" width="57" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <engine name="android" spec="^7.1.2" />
</widget>
